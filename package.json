{
  "name": "nuxt-portal",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "dev:remote": "nuxt dev --remote",
    "preview": "wrangler dev dist/server/index.mjs --remote --assets dist/public",
    "deploy": "wrangler deploy",
    "deploy:preview": "wrangler deploy --env preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:open": "vitest run --coverage && open coverage/index.html",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "docs:screenshots": "playwright test --config=playwright.screenshots.config.ts",
    "db:generate": "npx drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "curl -X POST http://localhost:3000/api/_dev/seed",
    "seed:wydapt": "npx tsx scripts/seed-wydapt.ts"
  },
  "dependencies": {
    "@nuxt/eslint": "^1.11.0",
    "@nuxthub/core": "^0.10.4",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@pinia/nuxt": "^0.11.3",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "docxtemplater": "^3.67.6",
    "dompurify": "^3.3.1",
    "drizzle-orm": "^0.36.4",
    "fast-xml-parser": "^5.3.2",
    "fflate": "^0.8.2",
    "firebase": "^12.7.0",
    "handlebars": "^4.7.8",
    "lucide-vue-next": "^0.468.0",
    "marked": "^17.0.1",
    "nanoid": "^5.1.6",
    "nuxt": "^4.2.1",
    "nuxt-auth-utils": "^0.5.25",
    "pdf-lib": "^1.17.1",
    "pinia": "^3.0.4",
    "pizzip": "^3.2.0",
    "tailwind-merge": "^2.6.0",
    "vue": "^3.5.25",
    "vue-router": "^4.6.3",
    "vue-toastification": "2.0.0-rc.5",
    "vuedraggable": "^4.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@nuxt/eslint-config": "^1.11.0",
    "@nuxt/test-utils": "^3.17.2",
    "@playwright/test": "^1.52.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/bcryptjs": "^2.4.6",
    "@types/dompurify": "^3.2.0",
    "@vitest/coverage-v8": "^3.1.3",
    "better-sqlite3": "^12.5.0",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.39.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^3.1.3",
    "vue-tsc": "^2.2.12",
    "wrangler": "^4.58.0"
  },
  "packageManager": "pnpm@10.12.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "bufferutil",
      "esbuild",
      "sharp",
      "unrs-resolver",
      "workerd"
    ],
    "overrides": {
      "esbuild": ">=0.25.0"
    }
  }
}
